<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <h2>Testando Socket.io</h2>

    <input type="text" id="name">
    <button onclick="enviar()">Enviar</button>
    <hr>
    <p id="resultado"></p>
</body>
</html>




<script src="/socket.io/socket.io.js"></script>
<script>
    // qual servidor o front precisa se conectar
    const socket = io("http://localhost:4000")

    // detectar quando o cliente se desconecta
    socket.on("disconnect", () => {
        console.log("Cliente desconectado.")
    })

    // mandar msg para o servidor
    socket.emit("mensagemCliente", {nome: "Guilherme Diechiete"})

    function enviar(){
        const name = document.getElementById("name")
        socket.emit("name", name.value)
    }
    socket.on("resultado", (data) => {
        console.log(data)
    })
</script>